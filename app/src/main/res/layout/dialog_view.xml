<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/buytip_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_alertDialog_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="提示"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_alertDialog_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="80dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="确认要花掉30金币去掉一个错误答案？"
        android:textColor="@color/black"
        android:textSize="27sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_alertDialog_cancel"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/cancel_button_icon" />

        <ImageButton
            android:id="@+id/imageButton_alertDialog_ok"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/ok_button_icon" />


    </LinearLayout>

</LinearLayout>
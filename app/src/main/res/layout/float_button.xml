<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--漂浮的显示现在第几关的那个漂亮的红圈-->
    <FrameLayout
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/game_level_title" />

        <TextView
            android:id="@+id/textView_level_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textSize="33sp"
            android:textStyle="bold" />
    </FrameLayout>


    <!--左边那两个消耗金币的帮助按钮-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_marginTop="170dp"
        >

        <FrameLayout
            android:id="@+id/frameLayout_help_delete_wrong_answer"
            android:layout_width="60dp"
            android:layout_height="85dp">

            <ImageButton
                android:id="@+id/btn_help_delete_wrong_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/help_delete_wrong_answer_button_icon" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/game_coin_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="16dp"
                android:text="@integer/help_delete_wrong_answer"
                android:textSize="15sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="85dp">

            <ImageButton
                android:id="@+id/btn_help_tips_right_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/help_tips_right_answer_button_icon" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/game_coin_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="15dp"
                android:text="@integer/help_tips_right_answer"
                android:textSize="15sp"
                android:textStyle="bold" />

        </FrameLayout>
    </LinearLayout>


</RelativeLayout>